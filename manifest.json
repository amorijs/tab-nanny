{
  "manifest_version": 2,

  "name": "2theleft",
  "description": "This extension sorts your tabs in last-used order",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "To the left!"
  },
  "permissions": [
    "tabs"
  ],
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": true
  }
}